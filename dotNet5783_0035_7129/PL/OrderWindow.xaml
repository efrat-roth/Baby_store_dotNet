<Window x:Class="PL.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        xmlns:local1="clr-namespace:OrderDataBiding"

        mc:Ignorable="d"
        Title="OrderWindow" Height="640" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="OneOrderTemplate" DataType="local1:Order">
        </DataTemplate>
    </Window.Resources>
    <Grid x:Name="MainGrid" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,101,0,0" >
            <Grid x:Name="OrderDetailsRows">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="Title" Content="The details of " HorizontalAlignment="Right" Grid.Column="0" Grid.Row="0" FontSize="24" />
                <Label x:Name="Title2" Content="order " HorizontalAlignment="Left" Grid.Column="1" Grid.Row="0" FontSize="24" />
                <Label x:Name="IDxamel" Content="The ID of order" HorizontalAlignment="Stretch" Grid.Column="0" Grid.Row="1" />
                <Label x:Name="Namexamel" Content="The name of the customer" HorizontalAlignment="Stretch" Grid.Column="0" Grid.Row="2" />
                <Label x:Name="Statusxamel" Content="The Status of the order" HorizontalAlignment="Stretch" Grid.Column="0" Grid.Row="3"/>
                <Label x:Name="Amountxamel" Content="The amount of items in the order" HorizontalAlignment="Stretch" Grid.Column="0" Grid.Row="4"/>
                <Label x:Name="Pricexamel" Content="The total price of the order" HorizontalAlignment="Stretch" Grid.Column="0" Grid.Row="5"/>
                <Label x:Name="showID" ContentTemplate="{Binding OneOrderTemplate}" Content="{Binding IDProperty}"  HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="1"/>
                <Label x:Name="showName" ContentTemplate="{Binding Name}" HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="2"/>
                <Label x:Name="showStatus" ContentTemplate="{Binding Status}" HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="3"/>
                <Label x:Name="showAmount" ContentTemplate="{Binding AmountOfItems}" HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="4"/>
                <Label x:Name="showPrice" ContentTemplate="{Binding Price}" HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="5"/>

            </Grid>

        </StackPanel>
        <StackPanel Grid.Column="1" Margin="0,273,0,261">
            <Grid x:Name="UpdateGrid" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label x:Name="ChooseProduct" Content="Enter the id of product to update" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="0"/>
                <TextBox x:Name="GetProduct"  HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="0" PreviewKeyDown="IdIsNumber"/>
                <Label x:Name="newAmount" Content="Enter the new amount to update" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="1"/>
                <TextBox x:Name="amountContent"  HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="1" PreviewKeyDown="amountIsNumber"/>
                <Button x:Name="UpdateProductxamel" Content="Update the product in the store"  HorizontalAlignment="Left" Click="UpdateProducts" Grid.Column="1" Grid.Row="2"/>
            </Grid>
        </StackPanel>
    </Grid>

</Window>
