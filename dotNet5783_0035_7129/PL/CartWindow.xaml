<Window x:Class="PL.CartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="CartWindow" Height="450" Width="800">
        
    <Grid>
        <Label Name="CustomerName" Content="{Binding}"/>
        <Label Name="CustomerEmail" Content="{Binding}"/>
        <Label Name="CustomerAdress" Content="{Binding}"/>
        <Label Name="TotalPrice" Content="{Binding}"/>
        <ListView Name="productsInCart" ItemsSource="{Binding}"/>
    </Grid>
</Window>
