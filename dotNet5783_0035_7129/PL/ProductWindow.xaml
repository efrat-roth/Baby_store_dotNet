<Window x:Class="PL.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ValueConverterDemo"
        mc:Ignorable="d"
        Title="ProductWindow" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource self}}">

    <Window.Resources>
        <local:NullToVisibilityConverter x:Key="nullToVisibilityConverter"/>
        <local:NotNullToVisibilityConverter x:Key="notNullToVisibilityConverter"/>
    </Window.Resources>
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="267*"/>
            <ColumnDefinition Width="158*"/>
            <ColumnDefinition Width="317*"/>
            <ColumnDefinition Width="58*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="EnterID" Grid.Column="2" HorizontalAlignment="Left" TextWrapping="Wrap"  VerticalAlignment="Center" Width="120"  PreviewKeyDown="IdIsNumber" Visibility="{Binding product, Converter={StaticResource nullToVisibilityConverter}}" Height="18"  />
        <Label x:Name="IDxamel" Grid.Column="1" Content="Enter ID of product" HorizontalAlignment="Left" VerticalAlignment="Center" Height="26"  Width="111"/>
        <Label x:Name="Namexamel" Grid.Row="1" Grid.Column="1" Content="Enter the name" HorizontalAlignment="Left" VerticalAlignment="Center" Height="25" Width="91"/>
        <Label x:Name="Categoryxamel" Grid.Row="2" Grid.Column="1" Content="choose the category" HorizontalAlignment="Left"  VerticalAlignment="Center" Height="26"  Width="118"/>
        <TextBox x:Name="EnterName" Background="#FFFAEFF5" Grid.Row="1" Grid.Column="2" Text="{Binding product.Name}" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" Height="17" />
        <ComboBox x:Name="ChooseCategory" Background="#FFFAEFF5" Grid.Row="2" Grid.Column="2" SelectedItem="{Binding product.Category}" HorizontalAlignment="Left" ItemsSource="{Binding _Category}" VerticalAlignment="Center" Width="120" Text="Choose category of product " Height="22"/>
        <Label x:Name="Pricexamel" Grid.Row="3" Grid.Column="1" Content="Enter the price" HorizontalAlignment="Left" VerticalAlignment="Center" Height="26" Width="87"/>
        <TextBox x:Name="EnterPrice" Background="#FFFAEFF5" Grid.Row="3" Grid.Column="2" Text="{Binding product.Price}" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" PreviewKeyDown="PriceIsNumber" Height="18"/>
        <Label x:Name="InStockxamel" Grid.Row="4" Grid.Column="1" Content="Enter amount in stock" HorizontalAlignment="Left" VerticalAlignment="Center" Height="26" Width="126"/>
        <TextBox x:Name="EnterInStock" Background="#FFFAEFF5" Grid.Row="4" Grid.Column="2" Text="{Binding product.Amount}" HorizontalAlignment="Left" TextWrapping="Wrap"
        VerticalAlignment="Center" Width="120" PreviewKeyDown="InStockIsNumber" Height="18"/>
        <Button x:Name="AddProductxamel" Grid.Row="5" Grid.Column="1" Content="Add the new product to the store"  HorizontalAlignment="Right" 
                VerticalAlignment="Top" Click="AddProducts"  Visibility="{Binding product, Converter={StaticResource nullToVisibilityConverter}}" Margin="0,31,224,0" Height="20" Width="181" Grid.ColumnSpan="2" />
        <Button x:Name="UpdateProductxamel" Grid.Row="5" Grid.Column="1" Content="Update the product in the store"  HorizontalAlignment="Right" 
                VerticalAlignment="Top" Click="UpdateProducts" Visibility="{Binding product, Converter={StaticResource notNullToVisibilityConverter}}" Margin="0,31,224,0" Height="20" Width="172" Grid.ColumnSpan="2" />
        <Label x:Name="showID" Background="#FFFAEFF5" Grid.Column="2" Visibility="{Binding product, Converter={StaticResource notNullToVisibilityConverter}}" Content="{Binding product.ID}" HorizontalAlignment="Left" VerticalAlignment="Center" Height="26" Width="120"/>
    </Grid>
</Window>
