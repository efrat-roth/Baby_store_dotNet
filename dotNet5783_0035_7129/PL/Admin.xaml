<Window x:Class="PL.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Admin" Height="450" Width="800">
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
     

        <Button x:Name="products" Content="Products in store" Grid.Column="0" HorizontalAlignment="Center"
                  Height="107" Width="236" Click="ShowListProducts" />
        <Button x:Name="orders" Content="orders of the store" Grid.Column="1" HorizontalAlignment="Center"
                  Height="107" Width="236" Click="ShowListOrders" />
        <Button x:Name="simulator" Content="Status of orders" Grid.Column="2" HorizontalAlignment="Center"
                  Height="107" Width="236" Click="ShowSimulator" />
    </Grid>
</Window>
